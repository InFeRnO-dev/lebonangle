{% extends 'base.html.twig' %}
{% block title %}Advert{% endblock %}
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-lg bg-lg">
        <a class="navbar-brand" href="{{ path('adverts_index') }}">
            <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-house-door-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.5 10.995V14.5a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-7a.5.5 0 0 1 .146-.354l6-6a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 .146.354v7a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5V11c0-.25-.25-.5-.5-.5H7c-.25 0-.5.25-.5.495z"/>
                <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
            </svg>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div style="align-content: end" class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li style="margin-right: 10px" class="nav-item">
                    <a class="nav-link" href="{{ path('categories_index') }}">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-collection-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6v7z"/>
                            <path fill-rule="evenodd" d="M2 3a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 0-1h-11A.5.5 0 0 0 2 3zm2-2a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7A.5.5 0 0 0 4 1z"/>
                        </svg>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('users_index') }}">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        </svg>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path('logout') }}">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-door-closed-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4 1a1 1 0 0 0-1 1v13H1.5a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2a1 1 0 0 0-1-1H4zm2 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                        </svg>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block body %}
    {% for advert in adverts %}
        <div class="col-6 mb-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h4 style="font-family: Arial" class="card-title">{{ advert.title }}</h4>
                    <h4 style="font-family: Georgia" class="card-text">{{ advert.author }}</h4>
                    <p style="text-align: left; font-family: Georgia" class="card-text">{{ advert.price }} â‚¬</p>
                    <p style="text-align: left; font-family: Georgia" class="card-text">{{ advert.state }}</p>
                    <a href="{{ path('advert_show', { 'id': advert.id}) }}" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
    {% else %}
        <h3>No advert</h3>
    {% endfor %}
{% endblock %}